{
  "version": 1,
  "canisters": {
    "timer_rust": {
      "type": "rust",
      "package": "ouroc-timer-rust",
      "candid": "src/timer_rust/ouroc_timer_rust.did"
    },
    "license_registry": {
      "type": "motoko",
      "main": "src/license_registry/LicenseRegistry.mo"
    },
    "ouroc_frontend": {
      "type": "assets",
      "source": ["frontend/dist"],
      "dependencies": ["timer_rust", "license_registry"]
    },
    "simple_timer_frontend": {
      "type": "custom",
      "build": "npm run build",
      "candid": "src/simple_timer_frontend/src/simple_timer_frontend.did",
      "wasm": "target/wasm32-unknown-unknown/release/simple_timer_frontend.wasm",
      "source": ["src/simple_timer_frontend/package.json", "src/simple_timer_frontend/src/index.ts"]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral",
      "replica": {
        "subnet_type": "system"
      }
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  }
}
